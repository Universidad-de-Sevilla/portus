{% extends "layout/coreui/principal.html.twig" %}
{% set active = 'people' %}
{% set title = 'Person Edit'|trans ~ ': ' ~ person.firstName ~ ' '  ~ person.lastName %}
{% block js %}

{% endblock %}
{% block content %}
    <div class="card">
        <form action="{{ path('person_save') }}" method="post">
            <div class="card-header">
                <strong>{{ person.firstName }} {{ person.lastName }}</strong>
            </div>
            <div class="card-block">
                <input type="hidden" name="id" value="{{ person.id }}">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" href="#general" aria-controls="general" aria-expanded="true"
                           role="tab" data-toggle="tab">{{ 'General'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#position" aria-controls="position" aria-expanded="false"
                           role="tab" data-toggle="tab">{{'Position'|trans}}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#other" aria-controls="other" aria-expanded="false"
                           role="tab" data-toggle="tab">{{'Other'|trans}}</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="general">
                        <div class="col-lg-7">
                            <div class="form-group">
                                <label for="firstName">{{ 'First Name'|trans}}</label>
                                <input type="text" class="form-control" name="firstName" value="{{ person.firstName }}">
                            </div>
                            <div class="form-group">
                                <label for="lastName">{{'LastName'|trans}}</label>
                                <input type="text" class="form-control" name="lastName"
                                       value="{{ person.lastName }}">
                            </div>
                            <div class="form-group">
                                <label for="gender">{{ 'Gender'|trans }}</label>
                                <select class="form-control" name="gender">
                                    <option value="1" {% if person.gender_id == "1" %}selected{% endif %}>Mujer</option>
                                    <option value="2" {% if person.gender_id == "2" %}selected{% endif %} >Hombre</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="personalPhoneNumber">{{'Personal Phone Number'|trans}}</label>
                                <input type="text" class="form-control" name="personalPhoneNumber"
                                       value="{{ person.personalPhoneNumber }}">
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="login">{{ 'Login'|trans }}Login</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                                        <input type="text" class="form-control" name="login"
                                               value="{{ person.login }}">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-10">
                                    <label for="email">{{'Email'|trans}}</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                                        <input type="text" class="form-control" name="email"
                                               value="{{ person.email }}">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="createdAt">{{'Created At'|trans}}</label>
                                    <input type="text" class="form-control" disabled name="createdAt"
                                           value="{{ person.createdAt|date('d/m/Y') }}">
                                </div>
                                <div class="col-md-6">
                                    <label for="modifiedAt">{{'Modified At'|trans}}</label>
                                    <input type="text" class="form-control" disabled name="modifiedAt"
                                           value="{{ person.modifiedAt|date('d/m/Y') }}">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-1">
                            <div class="form-group">
                                <label for="nif">NIF</label>
                                <input type="text" class="form-control" name="nif" value="{{ person.nif }}">
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="birthDate">{{'Birth Date'|trans}}</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input type="text" class="form-control date" name="birthDate"
                                               value="{{ person.birthDate|date('d/m/Y') }}">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="uvus">UVUS</label>
                                <input type="text" class="form-control" name="uvus"
                                       value="{{ person.uvus }}">
                            </div>
                        </div>
                    </div>

                    <div role="tabpanel" class="tab-pane" id="position">
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label for="unit">{{'Unit'|trans}}</label>
                                <input type="text" class="form-control" name="unit"
                                       value="{{ person.position }}">
                            </div>
                            <div class="form-group">
                                <label for="position">{{'Position'|trans}}</label>
                                <input type="text" class="form-control" id="position"
                                       value="{{ person.position }}">
                            </div>
                            <div class="form-group">
                                <label for="officePhoneNumber">{{ 'Office Phone Number'|trans }}</label>
                                <input type="text" class="form-control" id="officePhoneNumber"
                                       value="{{ person.officePhoneNumber }}">
                            </div>
                        </div>
                    </div>

                    <div role="tabpanel" class="tab-pane" id="other">
                        ...
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-sm btn-primary">
                    <i class="fa fa-save"></i> {{ 'Save changes'|trans }}
                </button>
                <button type="button" class="btn btn-sm btn-danger">
                    <i class="fa fa-trash"></i> {{ 'Delete person'|trans }}
                </button>
                <a href="{{ path('people') }}" class="btn btn-white pull-right" role="button"><i
                            class="fa fa-times"></i> {{ 'Cancel'|trans }}</a>
            </div>
        </form>
    </div>
{% endblock %}